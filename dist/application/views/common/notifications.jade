script(src='/javascripts/client/controllers/common/notificationsCtrl.js')
div(ng-controller="notificationsCtrl")
	div(style='overflow:auto;height:250px;min-width:300px;background:white;border:1px solid gray;',ng-show="items.length > 0")
		table.table.table-bordered
			tr(ng-repeat="item in items",ng-class="item.unread ? 'info' : ''")
				td
					p(ng-bind-html="renderMessage(item.message)")
					span.pull-right.font-xs.text-muted {{item.when}}
	div(ng-if="items.length==0")
		div.well(style='margin:0px !important;')
			h4 შეტყობინებები არარის