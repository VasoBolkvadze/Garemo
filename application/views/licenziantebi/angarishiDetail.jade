extends ../index
block content
	div.container
		.container
		.row
			.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
				.panel.panel-info
					.panel-heading
						h3.panel-title.txt-capital= 'ლიცენზიანტის ანგარიში / ' + pid
					.panel-body
						.row
							.col-md-3.col-lg-3(align='center')
								img.img-circle(src='/img/user.png')
							.col-md-9.col-lg-9
								table.table.table-user-information
									tbody
										tr
											td დასახელება:
											td= dasaxeleba
										tr
											td Username:
											td= pid
										tr
											td პაროლი:
											td= paroli
					.panel-footer
						form(action=pid+'/'+'generatePassword',method='POST')
							if !paroli
								button.btn.btn-danger
									i.glyphicon.glyphicon-refresh
									span.txt-capital= ' პაროლის გენერაცია'
